{
  "name": "curos-rapido-rocketseat",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "db:seed": " node --env-file .env src/database/seed.ts",
    "dev": "node --import tsx --env-file .env --watch src/server.ts",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:migrate:prod": "echo 'Starting migration...' && echo 'DATABASE_URL check:' && echo ${DATABASE_URL:0:20}... && NODE_ENV=production drizzle-kit migrate --verbose",
    "db:studio": "drizzle-kit studio",
    "pretest": "dotenv -e .env.test drizzle-kit migrate",
    "test": "dotenv -e .env.test vitest run --coverage",
    "commit": "cz",
    "commit:ai": "./ai-commit.sh",
    "prepare": "husky || exit 0"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-customizable"
    },
    "cz-customizable": {
      "config": "./.cz-config.cjs"
    }
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@fastify/swagger": "^9.5.1",
