    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^24.3.0",
    "@vitest/coverage-v8": "^3.2.4",
    "commitizen": "^4.3.1",
    "cz-conventional-changelog": "^3.3.0",
    "cz-customizable": "^7.4.0",
    "dotenv-cli": "^10.0.0",
    "drizzle-kit": "^0.31.4",
