    "argon2": "^0.44.0",
    "bcrypt": "^6.0.0",
    "dotenv": "^17.2.1",
    "drizzle-orm": "^0.44.4",
    "fastify": "^5.5.0",
    "fastify-type-provider-zod": "^5.0.3",
    "jsonwebtoken": "^9.0.2",
    "pg": "^8.16.3",
    "supertest": "^7.1.4",
    "zod": "^4.0.17"
  },
